{
    "name": "tutorial/spa-slim-vue-js",
    "description": "A single-page application (SPA) with Slim Framework and Vue.js",
    "type": "project",
    "keywords": [
        "slim framework",
        "vue.js",
        "single-page application",
        "tutorial"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Torsten Petersdorf",
            "email": "mail@tpetersdorf.dev",
            "homepage": "https://tpetersdorf.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.3",
        "php-di/slim-bridge": "^3.1",
        "slim/php-view": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "SPA\\": "src"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --dry-run -v --config=./.php_cs.dist",
        "fix": "php-cs-fixer fix -v --config=./.php_cs.dist"
    }
}
